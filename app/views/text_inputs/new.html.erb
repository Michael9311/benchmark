<h1>New Text Input</h1>

<% if @text_input.errors.any? %>
  <div id="error_explanation" class="alert alert-danger">
    <h2><%= pluralize(@text_input.errors.count, "error") %> prohibited this text input from being saved:</h2>
    <ul>
      <% @text_input.errors.full_messages.each do |message| %>
        <li><%= message %></li>
      <% end %>
    </ul>
  </div>
<% end %>

<%= form_with(model: @text_input, local: true) do |form| %>
  <div class="field">
    <%= form.label :name %>
    <%= form.text_field :name, class: "form-control", placeholder: "Enter a unique name for this input" %>
  </div>

  <div class="field">
    <%= form.label :content %>
    <%= form.text_area :content, rows: 10, class: "form-control", placeholder: "Enter the text content here" %>
  </div>

  <div class="actions">
    <%= form.submit "Create Text Input", class: "btn btn-primary" %>
  </div>
<% end %>

<%= link_to "Back", text_inputs_path if respond_to?(:text_inputs_path) %>