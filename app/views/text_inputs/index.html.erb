<h1>Text Inputs</h1>

<% if notice %>
  <div class="alert alert-success"><%= notice %></div>
<% end %>

<div class="mb-3">
  <%= link_to "New Text Input", new_text_input_path, class: "btn btn-primary" %>
</div>

<% if @text_inputs.any? %>
  <div class="table-responsive">
    <table class="table table-striped table-hover">
      <thead>
        <tr>
          <th>Name</th>
          <th>Preview</th>
          <th>Created At</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        <% @text_inputs.each do |text_input| %>
          <tr>
            <td><%= text_input.name %></td>
            <td><%= truncate(text_input.content, length: 100) %></td>
            <td><%= text_input.created_at.to_s(:short) %></td>
            <td>
              <%= link_to "View", text_input_path(text_input), class: "btn btn-sm btn-info" %>
            </td>
          </tr>
        <% end %>
      </tbody>
    </table>
  </div>
<% else %>
  <div class="alert alert-info">
    No text inputs have been created yet. <%= link_to "Create one now", new_text_input_path %>.
  </div>
<% end %>