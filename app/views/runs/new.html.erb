<div class="mx-auto max-w-2xl px-4 py-8 sm:px-6 lg:px-8">
  <div class="space-y-10 divide-y divide-gray-900/10">
    <div class="grid grid-cols-1 gap-x-8 gap-y-8 md:grid-cols-3">
      <div class="px-4 sm:px-0">
        <h2 class="text-base font-semibold leading-7 text-gray-900">New Run</h2>
        <p class="mt-1 text-sm leading-6 text-gray-600">Create a new run by selecting an input, prompt, and LLM.</p>
      </div>

      <div class="bg-white shadow-sm ring-1 ring-gray-900/5 sm:rounded-xl md:col-span-2">
        <% if @run.errors.any? %>
          <div class="rounded-md bg-red-50 p-4 mb-4">
            <div class="flex">
              <div class="ml-3">
                <h3 class="text-sm font-medium text-red-800">
                  <%= pluralize(@run.errors.count, "error") %> prohibited this run from being saved:
                </h3>
                <div class="mt-2 text-sm text-red-700">
                  <ul role="list" class="list-disc space-y-1 pl-5">
                    <% @run.errors.full_messages.each do |message| %>
                      <li><%= message %></li>
                    <% end %>
                  </ul>
                </div>
              </div>
            </div>
          </div>
        <% end %>

        <%= form_with(model: @run, local: true, class: "px-4 py-6 sm:p-8") do |form| %>
          <div class="space-y-6">
            <div>
              <%= form.label :input_id, "Input", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= form.collection_select :input_id, @inputs, :id, :name, 
                    { prompt: "Select an input" },
                    { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6" } %>
              </div>
            </div>

            <div>
              <%= form.label :prompt_id, "Prompt", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= form.collection_select :prompt_id, @prompts, :id, :name, 
                    { prompt: "Select a prompt" },
                    { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6" } %>
              </div>
            </div>

            <div>
              <%= form.label :llm_id, "LLM", class: "block text-sm font-medium leading-6 text-gray-900" %>
              <div class="mt-2">
                <%= form.collection_select :llm_id, @llms, :id, :name, 
                    { prompt: "Select an LLM" },
                    { class: "block w-full rounded-md border-0 py-1.5 text-gray-900 shadow-sm ring-1 ring-inset ring-gray-300 focus:ring-2 focus:ring-inset focus:ring-black sm:text-sm sm:leading-6" } %>
              </div>
            </div>

            <div class="flex items-center justify-between gap-x-6">
              <%= link_to "Cancel", runs_path, class: "text-sm font-semibold leading-6 text-gray-900" %>
              <%= form.submit "Create Run", class: "rounded-md bg-black px-3 py-2 text-sm font-semibold text-white shadow-sm hover:bg-gray-800 focus-visible:outline focus-visible:outline-2 focus-visible:outline-offset-2 focus-visible:outline-black" %>
            </div>
          </div>
        <% end %>
      </div>
    </div>
  </div>
</div>
